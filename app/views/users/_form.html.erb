<section class="container">
  <%= form_with(model: user, local: true) do |form| %>
    <% if user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :user_name %>
      <%= form.text_field :user_name, size: 30, class: "input" %>
    </div>

    <div class="field">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, size: 30, class: "input" %>
    </div>

    <div class="field">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, size: 30, class: "input" %>
    </div>

    <div class="field">
      <%= form.label :email %>
      <%= form.email_field :email, size: 30, class: "input" %>
    </div>

    <div class="field">
      <%= form.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br>
      <% end %>
      <%= form.password_field :password, autocomplete: "new-password", class: "input", size: 30 %>
    </div>

    <div class="field">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "input", size: 30 %>
    </div>

    <div class="actions">
      <%= form.submit(class: "btn btn-dark") %>
    </div>
  <% end %>
</section>

<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :image %><br>
    <%= form.text_field :image, size: 30, class: "input" %><br><br>
  </div>

  <div class="field">
    <%= form.label :category_id %><br>
    <%= form.collection_select(:category_id, Category.all, :id, :name, {prompt: "Choose a category"}) %><br><br>
  </div>

  <div class="field">
    <%= form.label :title %><br>
    <%= form.text_field :title, size: 30, class: "input", placeholder: "Type the Post title here" %><br><br>
  </div>

  <div class="field">
    <%= form.label :intro %><br>
    <%= form.text_area :intro, cols: 30, rows: 5, class: "input", placeholder: "Type the Post introduction here" %><br><br>
  </div>

  <div class="field">
    <%= form.label :content %><br>
    <%= form.text_area :content, cols: 30, rows: 15, class: "input", placeholder: "Type the Post content here" %><br><br>
  </div>

  <div class="actions">
    <%= form.submit(class: "btn btn-dark") %>
  </div>

<% end %>

<section class="container">

  <p>
    <%= image_tag(@post.image, class: "img-fluid") %>
  </p>
    <h2><%= @post.title %></h2>
    <hr>
  <p>
    <%= @post.intro %>
  </p>
  <p>
    <%= simple_format(@post.content) %><br><br>
  </p>
  <p>
    <em><%= (@post.created_at).strftime("%B %e, %Y at %I:%M %p") %></em>
  </p>
  <% if can? :update, @post %><%= link_to 'Edit', edit_post_path(@post) %> | <% end %> <%= link_to 'Back', posts_path %><br><br>
</section>

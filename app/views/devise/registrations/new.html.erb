<section class="container">

  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :user_name, "User Name" %>
      <%= f.text_field :user_name, class: "input", size: 30 %>
    </div>

    <div class="field">
      <%= f.label :first_name, "First Name" %>
      <%= f.text_field :first_name, class: "input", size: 30 %>
    </div>

    <div class="field">
      <%= f.label :last_name, "Last Name" %>
      <%= f.text_field :last_name, class: "input", size: 30 %>
    </div>


    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", size: 30 %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "input", size: 30 %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input", size: 30 %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-dark" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>
